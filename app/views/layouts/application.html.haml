<!doctype HTML>
%html
  %head
    %title Nicole Leigh Photography
    = javascript_include_tag( "jquery-1.4.2.min.js" )
    = javascript_include_tag( "jquery.cycle.all.min.js" )
    = stylesheet_link_tag( "http://yui.yahooapis.com/2.8.1/build/reset/reset-min.css" )
    = stylesheet_link_tag( "fonts" )
    = stylesheet_link_tag( "layout" )
    = stylesheet_link_tag( "colors" )
    %meta{ :name => "google-site-verification", :content => "w85r-XQ1Id3m6sTOUR7NUTgHbSc3Dvpgmy0SfKk8CAI" }
    %script{ :type => "text/javascript", :language => "javascript" }
      \ var _gaq = _gaq || [];
      \ _gaq.push(['_setAccount', 'UA-12673894-2']);
      \ _gaq.push(['_setDomainName', 'none']);
